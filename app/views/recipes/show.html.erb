<div class="container">
<h1> Recipe for <%= @recipe.title %></h1>

  <dl>
    <dt>Ingredients: </dt>
    <dd><%= @recipe.ingredients %></dd>

    <dt>Instructions: </dt>
    <dd><%= @recipe.instructions %></dd>

    <% if @recipe.pictures.attached? %>
        <dt>Pictures:</dt>
        <dd><%= @recipe.pictures.each do |picture| %>
          <%= image_tag picture.variant(resize: "500x500") %>
        </dd>
      <% end %>
    <% end %>
  </dl>
  <%= link_to "Back", user_recipes_path(@recipe.user) %>
</div>

