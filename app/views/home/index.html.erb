<div class="container">
  <div class="row">
    <div class="col-lg-12 mt-5">
      <div class="mx-auto mt-5" style="width: 400px">
    <%if @user %>
      <h1>Hello <%= @user.name %>!</h1>

      <% if @user.picture.attached? %>
        <dl>
        <dt>Picture:</dt>
        <dd><%= image_tag @user.picture.variant(resize: "500x500") %></dd>
        </dl>
      <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-12 mt-5">
      <div class="mx-auto mt-5" style="width: 400px">
        <%= form_with(url: search_path, method: 'get', local: true) do %>
          <div class="form-group">
            <%= label_tag :brewery, 'Looking for inspiration? Search for a brewery near you '%>
            <%= text_field_tag :brewery, nil, placeholder:
              'Eg. Anchor Steam', class: 'form-control'%>
          </div>

          <%= button_tag 'Search', class: 'btn btn-success btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class = "col-lg-12 mt-5">
      <h1> Browse recipes </h1>
      <dl>
        <%= will_paginate @recipes %>
        <% @recipes.each do |recipe| %>
          <div class = "row">
            <div class="col-sm-2">
              <dt>User:</dt>
              <dd><%= recipe.user.name %></dd>
              <dt>Title:</dt>
              <dd><%= recipe.title %></dd>
            </div>

            <div class = "col-lg-10 well">
              <dt>Ingredients:</dt>
              <dd><%= recipe.ingredients %></dd>
              <dt>Instructions:</dt>
              <dd><%= recipe.instructions %><dd>
            </div>
          </div>
          <hr>
        <% end %>
      </dl>
    </div>
  </div>
</div>
