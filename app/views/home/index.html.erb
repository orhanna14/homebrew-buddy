<%if @user %>
  <h1>Hello <%= @user.name %></h1>

<% if @user.picture.attached? %>
  <dl>
  <dt>Picture:</dt>
  <dd><%= image_tag @user.picture.variant(resize: "500x500") %></dd>
  </dl>
<% end %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-lg-12 mt-5">
      <div class="mx-auto mt-5" style="width: 400px">
        <%= form_with(url: search_path, method: 'get', local: true) do %>
          <div class="form-group">
            <%= label_tag :brewery, 'Search for a brewery '%>
            <%= text_field_tag :brewery, nil, placeholder:
              'Eg. Anchor', class: 'form-control'%>
          </div>

          <%= button_tag 'Search', class: 'btn btn-success btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class = "col-lg-12 mt-5">
      <h1> Browse recipes </h1>
      <ul>
        <% @recipes.each do |recipe| %>
          <%= recipe.id %>
          <div class = "row">
            <div class="col-md-2">
              <h5>User: <%= recipe.user.name %></h5>
            </div>

            <div class = "col-lg-6 well">
              <h4><%= recipe.title %></h4>
              <h5><%= recipe.ingredients %></h5>
              <h5><%= recipe.instructions %><h5>
            </div>
          </div>
        <% end %>
      </ul>
    </div>
  </div>
</div>
